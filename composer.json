{
  "name": "nice/form",
  "description": "Integrates Symfony's Form component with Nice PHP framework",
  "license": "MIT",
  "require": {
    "php": ">=5.4.0",
    "symfony/form": "~2.3",
    "symfony/dependency-injection": "~2.3"
  },
  "require-dev": {
    "phpunit/phpunit": "~3.7",
    "nice/framework": "1.0.x-dev"
  },
  "autoload": {
    "psr-4": {
      "Nice\\Tests\\": "tests/",
      "Nice\\": "src/"
    }
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.0-dev"
    }
  },
  "minimum-stability": "beta",
  "prefer-stable": true
}
